<h1 class="text-center">All Alpha Bloggers</h1>
<% @users.each do |user| %>
	<ul class="listings">
		<div class="row text-center">
			<div class="well col-xs-4 col-xs-offset-4	">
				<li><%= link_to gravatar_for(user), user_path(user) %></li>
				<li class="article title">
					<%= link_to user.username, user_path(user) %>
				</li>
				<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
				<% if logged_in? && current_user.admin? %>
					<li><%= link_to "Delete This User", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete user and associated articles"}	
					 %></li>
				<% end %>
			</div>
		</div>
	</ul>

<% end %>
<div class="text-center">
	<%= will_paginate %>
</div>