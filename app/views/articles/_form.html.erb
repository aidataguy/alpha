<% if @article.errors.any? %>
<h2> Bummer! you got the following errors :O</h2>
<ul>
	<% @article.errors.full_messages.each do |e| %>
	<li> <%= e %> </li>
	<% end %>
</ul>
<% end %>
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :title %> 
				</div>
				<div class="col-xs-8">
					<%= f.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :description %> <br/>
				</div>
				<div class="col-xs-8">
					<%= f.text_area :description, class:"form-control", placeholder: "put your article description" %>
				</div>
			</div>	
			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :excerpt %>
				</div>
				<div class="col-xs-8">
					<%= f.text_field :excerpt, class:"form-control", placeholder: "Put the excerpt" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-large" %>
				</div>
			</div>
		<% end %>
		<div class="col-xs-5 col-xs-offset-5">
			<%= link_to "Back to Articles", articles_path %>
		</div>
	</div>
</div>