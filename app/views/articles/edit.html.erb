<h1>Editing <%= @article.title %></h1>

<% if @article.errors.any? %>
<h2> Bummer! you got the following errors :O</h2>
<ul>
	<% @article.errors.full_messages.each do |e| %>
	<li> <%= e %> </li>
	<% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
<p>
	<%= f.label :title %> <br/>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :description %> <br/>
	<%= f.text_field :description %>
</p>

<p>
	<%= f.label :excerpt %> <br/>
	<%= f.text_field :excerpt %>
</p>

<p>
	<%= f.submit %>
</p>
<% end %>

<%= link_to "Back to Articles", articles_path %>
