 <div class="container">
	 <div class="row">
	 	<div class="col-xs-10 col-xs-offset-1">
	 	 <% flash.each do |name, e|  %>
	 	 <div class='alert alert-<%= "#{name}" %>'>
			<a href="#" class="close" data-dismiss="alert">&#215;</a>
	 	 	<%= content_tag :div, e, :id => "flash_#{name}" if e.is_a?(String) %>
	 	 </div>
		</div>
		 <% end %>
		 </div>
	 </div>
 </div>
